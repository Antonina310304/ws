-
    var authorizationList = [
        {
            isError: false,
            label: 'Электронная почта',
            errorText: 'Неверный формат почты',
            requireType: 'email',
            name: 'email',
            type: 'email',
            placeholder: '',
            isRequire: true,
            value: ''
        },
        {
            isError: false,
            label: 'Пароль',
            errorText: 'Неверный пароль',
            requireType: 'password',
            name: 'pass',
            type: 'password',
            placeholder: 'Введите пароль',
            isRequire: true,
            value: ''
        },
    ]

mixin formAuthorization
    .page__form
        +form({
            isDefaultValidate: true,
            fieldList: authorizationList,
            formName: 'authorization',
            textBtn: btnText.enter,
            action: 'http://localhost/success.php',
            aut: true,
        })
